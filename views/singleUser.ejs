<%- include('header') %>

<section class="flex flex-col justify-center items-center py-10 px-14">
    <% if (user.profile_picture) { %>
        <img class="w-24 object-cover rounded-full" src="data:image/<%=user.profile_picture.contenType%>;base64,<%=user.profile_picture.data.toString('base64')%>" alt="">
    <% } else { %>
        <img class="object-cover w-24 rounded-full" width="96" height="96" src="https://img.icons8.com/parakeet-line/96/test-account.png" alt="test-account"/>
    <% } %>
    <h1  class="text-2xl font-semibold"><%= user.username %></h1>
    <h2 class="text-md font-semibold capitalize text-gray-500 mt-2"><%= user.name %></h2>
    <% if (user.id !== authenticatedUser.id) { %>
        <form action="/follow/<%=user.id%>" method="post">
            <% if (isFollowing) { %>
                <button class="text-green-500 font-semibold bg-green-100 px-4 py-2 rounded-lg mt-5">Following</button>
            <% } else { %>
                <button class="text-blue-500 font-semibold bg-blue-100 px-4 py-2 rounded-lg mt-5">Follow</button>
            <% } %>
        </form>
    <% } %>
    <%- include('blogsTemplate') %>
</section>

