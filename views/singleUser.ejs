<%- include('header') %>
<%- console.log(writer) %>
<section class="flex flex-col justify-center items-center py-10 px-14">
    <img class="w-24 object-cover rounded-full aspect-square" src="../<%= writer.profile_picture %>" alt="">
    <h1  class="text-2xl font-semibold"><%= writer.username %></h1>
    <h2 class="text-md font-semibold capitalize text-gray-500 mt-2 text-center w-[680px]"><%= writer.name %></h2>
    <h3 class="text-md font-semibold capitalize text-gray-500 mt-2 text-center w-[680px]"><%= writer.about %></h3>
    <div class="flex justify-center items-center gap-10 my-5">
        <p class="text-lg font-semibold">Followed By <%= followersCount %> People</p>
        <p class="text-lg font-semibold">Follows <%= followingsCount %> People</p>
    </div>
    <% if (writer.id != user.id) { %>
        <form action="/follow/<%=writer.id%>" method="post">
            <% if (isFollowing) { %>
                <button class="text-green-500 font-semibold bg-green-100 px-4 py-2 rounded-lg mt-5">Following</button>
            <% } else { %>
                <button class="text-blue-500 font-semibold bg-blue-100 px-4 py-2 rounded-lg mt-5">Follow</button>
            <% } %>
        </form>
    <% } %>
    <%- include('blogsTemplate') %>
</section>

